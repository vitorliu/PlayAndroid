<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="title"
    android:textColor="#050404"
    android:textSize="16sp"
    android:padding="10dp"
    android:id="@+id/item_article_title"
    />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/item_article_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/item_article_author"
        />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="classify"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/item_article_author"
        app:layout_constraintBottom_toBottomOf="@+id/item_article_author"
        android:id="@+id/item_article_classify"
        />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/item_article_classify"
        app:layout_constraintBottom_toBottomOf="@+id/item_article_classify"
        android:id="@+id/item_article_time"
        />
</android.support.constraint.ConstraintLayout>